<script>
  import { signal } from 'boxels/core';
  import { $, appendChild } from 'boxels/dom';
  import { createDelay } from 'boxels/hooks';

  import Button from './components/Button.box';
  import Input from './components/Input.box';

  const count = signal(0);

  let displayContainer;

  const handleClick = (option) => {
    const display = $('p', {class: option === 'negative' ? styles.countLess : styles.countPlus}, option === 'negative' ? "-1" : "+1")
    appendChild(displayContainer, display);

    createDelay(() => {
      display.destroy();
    }, 1500);
  }
</script>

<main class={styles.container}>
  <h1 class={styles.title}>__PROJECT_NAME__</h1>

  <section class={styles.counter}>
    <div $lifecycle:mount={(e) => (displayContainer = e)}></div>
    <p class={styles.countDisplay}>{count}</p>

    <div class={styles.actions}> 
      <Button
        type="button"
        aria-label="Disminuir contador"
        $on:click={() => {
          count.update((c) => c - 1);
          handleClick('negative');
        }}
      >
        Disminuir
      </Button>

      <Input count={count} aria-label="Valor del contador" />

      <Button
        type="button"
        aria-label="Aumentar contador"
        $on:click={() => {
          count.update((c) => c + 1);
           handleClick('positive');
        }}
      >
        Aumentar
      </Button>
    </div>
  </section>
</main>

